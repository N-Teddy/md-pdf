{
	"name": "md-pdf",
	"version": "0.1.0",
	"description": "Print-ready Markdown to PDF converter (CLI + API)",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"md2pdf": "dist/cli/index.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"docs",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup && node scripts/copy-assets.mjs",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
		"format": "prettier --write \"**/*.{ts,md,json,yml,yaml}\"",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest"
	},
  "dependencies": {
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "hast-util-from-html": "^2.0.3",
    "hast-util-to-string": "^3.0.0",
    "html-to-text": "^9.0.5",
    "katex": "^0.16.11",
    "mermaid": "^10.9.1",
    "pdfkit": "^0.15.0",
    "playwright": "^1.48.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-toc": "^9.0.0",
    "shiki": "^1.24.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.4.5"
  },
	"keywords": [
		"markdown",
		"pdf",
		"converter",
		"cli",
		"typescript",
		"playwright"
	],
	"author": "",
	"license": "MIT",
		"engines": {
			"node": ">=20"
		},
		"devDependencies": {
			"@changesets/cli": "^2.27.8",
			"@types/hast": "^3.0.4",
			"@types/node": "^20.11.30",
			"@types/pdfkit": "^0.13.6",
			"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"vitest": "^2.0.5"
	},
	"packageManager": "pnpm@10.28.1"
}
